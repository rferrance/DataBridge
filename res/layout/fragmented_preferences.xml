<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="Connection preferences:">

        <EditTextPreference
                android:key="ip_preference"
                android:title="Server Address"
                android:inputType="phone"
                android:summary="Address of the server to connect to."
                android:dialogTitle="Server Address" 
                android:defaultValue="172.31.54.231"/>

        <EditTextPreference
                android:key="port_preference"
                android:title="Server Port Number"
                android:inputType="phone"
                android:summary="Port number of the server to connect to."
                android:dialogTitle="Server Port Number"
                android:defaultValue="8085" />
        
        <EditTextPreference
                android:key="auth_code"
                android:title="Server Authentication Code"
                android:summary="Authentication code from the server."
                android:dialogTitle="Server Authentication Code"
                android:defaultValue="" />

    </PreferenceCategory>

</PreferenceScreen>